# Production Environment Configuration
# Do not commit secrets to version control

# Application Environment
NODE_ENV=production
VITE_APP_VERSION=1.0.0
VITE_APP_NAME=Glitchjack

# API Configuration  
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=2000

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8080/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=5000

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_REDIRECT=true

# Monitoring and Analytics
# VITE_SENTRY_DSN= # Set via environment variables or CI/CD
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_SAMPLE_RATE=0.1
VITE_ENABLE_ANALYTICS=true
# VITE_GA_TRACKING_ID= # Set via environment variables or CI/CD

# Feature Flags
VITE_ENABLE_DEMO_MODE=false
VITE_ENABLE_DEVELOPER_TOOLS=false
VITE_ENABLE_ERROR_BOUNDARY_FALLBACK=true

# Performance Configuration
VITE_ENABLE_PRELOAD=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STRATEGY=networkFirst

# Rate Limiting
VITE_MAX_REQUESTS_PER_MINUTE=60
VITE_ENABLE_REQUEST_THROTTLING=true

# Game Configuration
VITE_MIN_BET=5
VITE_MAX_BET=1000
VITE_DEFAULT_PLAYER_BALANCE=500
VITE_GAME_TIMEOUT=600000

# Debugging
VITE_ENABLE_CONSOLE_LOGS=false
VITE_LOG_LEVEL=warn